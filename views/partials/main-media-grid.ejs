<%
  const pagination = gridPagination || {};
  const paginationTotal = typeof pagination.total === 'number' ? pagination.total : -1;
  const paginationLimit = typeof pagination.limit === 'number' ? pagination.limit : 0;
  const paginationPage = typeof pagination.page === 'number' ? pagination.page : 1;
  const paginationType = typeof pagination.type === 'string' ? pagination.type : '';
  const endlessScrollEnabled = paginationLimit > 0 && paginationTotal >= 0;
%>

<%- include('search-results', { searchScope: searchScope || 'all' }) %>

<div class="home-body">
  <section
    class="category search-results media-grid"
    data-endless-scroll="<%= endlessScrollEnabled %>"
    data-type="<%= paginationType %>"
    data-page="<%= paginationPage %>"
    data-limit="<%= paginationLimit %>"
    data-total="<%= paginationTotal %>"
  >
    <h2><%= gridTitle || 'Content' %></h2>
    <% if (!gridItems || !gridItems.length) { %>
      <p class="empty">No content available yet.</p>
    <% } else { %>
      <%- include('content-card-grid', { items: gridItems, gridId: 'media-content-grid' }) %>
    <% } %>
    <% if (endlessScrollEnabled) { %>
      <div class="endless-scroll-sentinel" aria-hidden="true"></div>
    <% } %>
  </section>
</div>
